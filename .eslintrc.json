{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks",
    "react-native",
    "react-redux",
    "redux-saga",
    "jsdoc",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended",
    "plugin:react-native/all",
    "plugin:react-redux/recommended",
    "plugin:redux-saga/recommended",
    "airbnb-base"
  ],
  "rules": {
    "react/prop-types": [
      "error",
      {
        "ignore": [
          "navigation"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "packageDir": "./"
      }
    ],
    "class-methods-use-this": "off",
    "no-use-before-define": "off"
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    },
    "import/resolver": {
      "babel-plugin-root-import": {
        "rootPathPrefix": "~",
        "rootPathSuffix": "App"
      }
    }
  },
  "env": {
    "jest": true,
    "browser": true
  },
  "globals": {
    "__DEV__": true
  }
}
